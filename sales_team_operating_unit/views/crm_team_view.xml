<openerp>
    <data>

        <record id="crm_team_salesteams_search" model="ir.ui.view">
            <field name="name">crm.case.section.search</field>
            <field name="model">crm.case.section</field>
            <field name="inherit_id"
                   ref="sales_team.crm_case_section_salesteams_search"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </field>
            </field>
        </record>

         <record id="crm_team_view_form" model="ir.ui.view">
            <field name="name">crm.case.section.form</field>
            <field name="model">crm.case.section</field>
            <field name="inherit_id" ref="sales_team.crm_case_section_view_form"/>
            <field name="arch" type="xml">
                <grou name="left" position="inside">
                    <group string="Operating Unit" name="group_operating_unit"
                           groups="operating_unit.group_multi_operating_unit">
                        <field name="operating_unit_id" domain = "[('company_id','=', company_id)]" options="{'no_create': True}"/>
                    </group>
                </page>
            </field>
        </record>

        <record id="crm_team_view_tree" model="ir.ui.view">
            <field name="name">crm.case.section.tree</field>
            <field name="model">crm.case.section</field>
            <field name="inherit_id"
                   ref="sales_team.crm_case_section_view_tree"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
